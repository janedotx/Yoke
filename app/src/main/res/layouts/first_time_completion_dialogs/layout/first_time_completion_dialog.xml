<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="222dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/HobbesBlue"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="CONGRATULATIONS!"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/firstTimeCompletionDialogDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="CHANGE ME!"
            android:textColor="@color/white"
            android:layout_marginBottom="17dp"
            android:textSize="12sp"></TextView>

        <ImageView
            android:id="@+id/firstTimeCompletionImage"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/heart_one"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/firstTimeCompletionRewardMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="CHANGE ME!"
            android:textColor="@color/white"
            android:layout_marginBottom="17dp"
            android:textSize="12sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:paddingTop="12dp"
        android:background="@color/HobbesDarkBlue"
        android:layout_height="44dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


        <TextView
            android:id="@+id/firstTimeDialogDismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="OKAY!"
            android:textColor="@color/white"
            android:layout_marginRight="16dp"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>