<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_height="65dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ImageView
        android:id="@+id/usageHistoryAppIcon"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/placeholder"
        android:layout_marginRight="41dp"
 />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/appUsageHistoryBarLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I am an app"
                android:textColor="@color/HobbesText"
                android:textSize="12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/HobbesText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/appUsageHistoryBarTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:text="24h 15m"
                android:textColor="@color/HobbesText"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="@dimen/app_usage_history_bar_width"
            android:layout_height="20dp"
            android:background="@color/HobbesBrownAccent">

            <View
                android:id="@+id/singleAppUsageHistoryBar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/HobbesBackgroundDark">

            </View>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
