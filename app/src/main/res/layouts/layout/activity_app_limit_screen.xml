<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_limit_screen"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AppLimit.AppLimitScreen">



    <TableLayout
        android:id="@+id/app_limit_todos_table"
        android:layout_width="214dp"
        android:layout_height="151dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

        <TableRow
            style="@style/BaseToDoView"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/todo_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/todo_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/todo_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </TableRow>


    </TableLayout>

    <TableLayout
        android:id="@+id/app_limit_stats_table"
        android:layout_width="368dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp">

        <TableRow
            android:id="@+id/app_limit_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/streak_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@string/daily_streaks_header"
                app:layout_constraintEnd_toStartOf="@+id/time_earned_so_far_header"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/time_earned_so_far_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/time_so_far_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/streak_number"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="0"
                app:layout_constraintEnd_toStartOf="@+id/time_earned_so_far_value"
                app:layout_constraintTop_toBottomOf="@+id/streak_header" />

            <TextView
                android:id="@+id/time_earned_so_far_value"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/streak_header"
                app:layout_constraintTop_toBottomOf="@+id/time_earned_so_far_header" />
        </TableRow>

    </TableLayout>
</LinearLayout>