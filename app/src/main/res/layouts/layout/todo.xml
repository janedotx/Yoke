<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/brown_rounded_corner_border"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/toDoViewGroup"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@drawable/todo_coloring"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/toDoDescription"
            style="@style/BaseToDoTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="18dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/toDoCheckBox"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/toDoCheckBox"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="15dp"
            android:background="@color/HobbesBackground"
            android:buttonTint="@color/HobbesText"
            app:layout_constraintBottom_toBottomOf="@+id/toDoDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toDoDescription"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <!--
        android:buttonTint="#ffffff"
        <!-->

    </android.support.constraint.ConstraintLayout>
</LinearLayout>