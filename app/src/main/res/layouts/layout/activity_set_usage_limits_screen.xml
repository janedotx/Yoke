<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HobbesBackground"
    android:orientation="vertical"
    tools:context=".SetUsageLimitsScreen">
    <include layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        >
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="66dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/grandpa_hobbes"
            ></ImageView>

        <LinearLayout
            android:id="@+id/usageLimitsInfoBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:background="@drawable/brown_rounded_corner_border"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customize your daily time limit"
                android:textColor="@color/HobbesText"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="You can choose how much time you're allowed to spend each day on time-wasting apps, before you'll be required to finish a todo."
                android:textColor="@color/HobbesText"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/customizeUsageLimitsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/HobbesBrownAccent"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:text="CUSTOMIZE YOUR USAGE LIMIT"
        android:textColor="@color/HobbesText"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/setUsageLimitMinutes"
            android:textColor="@color/HobbesPrimaryAccent"
            android:textSize="14sp"
            android:text="30"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingBottom="12dp"
            android:textColor="@color/HobbesPrimaryAccent"
            android:textSize="12sp"
            android:text=" m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <SeekBar
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/setInitialTimeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="60"
        android:progress="30"
        android:progressDrawable="@drawable/seek_bar"
        android:thumb="@drawable/seek_thumb" />
    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
    <LinearLayout
        android:gravity="bottom"
        android:id="@+id/nextBar"
        android:layout_marginRight="@dimen/next_button_margin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            layout="@layout/next_button"/>
    </LinearLayout>

</LinearLayout>