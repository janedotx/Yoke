<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:background="@color/HobbesBackground"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".OnboardingScreens.WelcomeScreen">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/vertical_grampa" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/next_button_margin_right"
            android:paddingLeft="15dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="20dp"
                android:padding="5dp"
                android:layout_marginTop="12dp"
                android:scrollbarFadeDuration="0"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:background="@drawable/brown_rounded_corner_border"
                app:layout_constraintBottom_toTopOf="@+id/include"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:includeFontPadding="true"
                    android:id="@+id/onboardingTextHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/onboardingText"
                    android:text="WELCOME"
                    android:textStyle="bold"
                    android:textSize="22sp"/>


                <TextView
                    android:id="@+id/onboardingTextBody"
                    style="@style/onboardingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="true"
                    android:text="WELCOME"
                    android:textSize="18sp" />
            </LinearLayout>

            <include
                android:id="@+id/include"
                layout="@layout/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="@dimen/next_button_margin_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</LinearLayout>
