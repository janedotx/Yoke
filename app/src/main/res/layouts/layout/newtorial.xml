<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="222dp"
    android:id="@+id/tutorial"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:background="@color/HobbesBannerGreen"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tutorialHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="type"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tutorialExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="For every daily habit completed, you earn 15 minutes. Completing all of your daily habits makes your streak go up. Failure to do them all resets your streak to 0.type"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <include
            layout="@layout/smallest_todo"
            android:layout_width="255dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"></include>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/HobbesDarkGreen"
        android:paddingTop="14dp">

        <TextView
            android:id="@+id/tutorialNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="16dp"
            android:text="1/2"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">

        </View>

        <TextView
            android:id="@+id/tutorialNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="13dp"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>