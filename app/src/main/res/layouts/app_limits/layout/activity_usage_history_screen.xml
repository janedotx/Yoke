<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/topBoxSepia"
    tools:context="com.system2override.hobbes.UsageHistory.UsageHistoryScreen">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="65dp"
            android:layout_marginLeft="22dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:layout_height="wrap_content"
            android:src="@drawable/grandpa_hobbes"/>

            <LinearLayout
                android:background="@color/HobbesPrimaryAccent"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_marginStart="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/usageHistoryTopBoxText"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:text="Your average daily phone usage is "
                    android:layout_width="194dp"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_marginTop="10dp"
                    android:layout_width="147dp"
                    android:layout_height="20dp"
                    android:background="@color/bottomBoxSepia"
                    >

                    <View
                        android:background="@color/HobbesCardinal"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/totalUsageHistoryTopBar">

                    </View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="8sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="0h"
                        android:gravity="left"
                        ></TextView>
                    <View
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_width="0dp">

                    </View>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="8sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="right"
                        android:text="12h"
                        ></TextView>
                </LinearLayout>
                <TextView
                    android:id="@+id/usageRecommendationText"
                    android:visibility="gone"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:text="Grandpa Hobbes recommends only two hours a day."
                    android:layout_width="194dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/usageHistoryBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/usageHistoryBottomBarText"
                        android:layout_width="194dp"
                        android:layout_height="wrap_content"
                        android:text="Your average daily phone usage since you installed Hobbes is"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="147dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bottomBoxSepia">

                        <View
                            android:id="@+id/totalUsageHistoryBottomBar"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/HobbesCardinal">

                        </View>
                    </LinearLayout>
                </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="24dp"
        android:background="@color/bottomBoxSepia"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="AVERAGE DAILY USAGE PER APP"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/appUsageHistory"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
         />

    <LinearLayout
        android:id="@+id/nextBar"
        android:layout_marginRight="31dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            layout="@layout/next_button"/>
    </LinearLayout>
</LinearLayout>
