<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/bottomBox"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="0dp"
    android:paddingTop="20dp">

    <TextView
        style="@style/expositoryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="12dp"
        android:text="Finish a task to earn more time."></TextView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/appLimitTodos"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/dailyStreakBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/HobbesPrimaryAccent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            android:paddingTop="24dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="DAILY STREAK"
                android:textColor="@color/HobbesPink"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

            </View>

            <TextView
                android:id="@+id/appLimitDailyStreakNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:text="0"
                android:textColor="@color/HobbesPink"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                tools:layout_editor_absoluteY="16dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="OK, I'LL BE PRODUCTIVE"
        android:textColor="@color/HobbesFaintTeal"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        ></TextView>



</LinearLayout>