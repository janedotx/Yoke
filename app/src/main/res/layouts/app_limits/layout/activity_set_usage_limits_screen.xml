<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/topBoxSepia"
    tools:context=".SetUsageLimitsScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        >
        <ImageView
            android:layout_height="133dp"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/grandpa_hobbes"
            ></ImageView>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/HobbesPrimaryAccent"
            android:padding="12dp"
            android:layout_width="155dp"
            android:layout_height="80dp">
            <TextView
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:background="@color/bottomBoxSepia"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="CUSTOMIZE YOUR USAGE LIMITS"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>