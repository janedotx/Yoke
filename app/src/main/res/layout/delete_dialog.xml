<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/HobbesPrimaryAccent"
    android:layout_width="210dp"
    android:layout_height="290dp">


    <TextView
        android:id="@+id/deleteDialogHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/HobbesDarkTealAccent"
        android:paddingBottom="12dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:text="CONFIRM DELETION?"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deleteDialogMessage"
        android:layout_width="181dp"
        android:layout_height="45dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:text="Are you sure you want to delete the following task?"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteDialogHeader" />

    <include
        layout="@layout/small_todo_no_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="14dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="179dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="50dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/deleteDialogYesButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:background="@color/HobbesDarkTealAccent"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="YES" />

        <TextView
            android:id="@+id/deleteDialogNoButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@drawable/dark_teal_border"
            android:text="NO" />
    </LinearLayout>
</LinearLayout>